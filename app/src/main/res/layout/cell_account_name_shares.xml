<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/account_name_shares"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_horizontal"
              android:orientation="vertical"
              android:padding="16dp">

    <TextView
        android:id="@+id/account_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textsize_doubleline_cell_title"
        tools:text="Contributory"/>

    <TextView
        android:id="@+id/account_shares"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textsize_doubleline_cell_detail"
        tools:text="32 shares"/>
</LinearLayout>