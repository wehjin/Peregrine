<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/pageBackgroundLight"
              android:orientation="vertical"
              android:paddingBottom="32dp"
              android:paddingEnd="16dp"
              android:paddingStart="16dp"
              android:paddingTop="32dp">

    <include layout="@layout/cell_amount_price_shares"/>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="16dp"/>

    <android.support.v7.widget.CardView
        android:id="@+id/accounts_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        app:cardBackgroundColor="@color/cardBackgroundLight"
        app:cardElevation="2dp">

        <LinearLayout
            android:id="@+id/accounts_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/cell_account_name_shares"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
